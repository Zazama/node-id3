{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:mocha/recommended"
    ],
    "env": {
        "node": true,
        //"amd": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "ignorePatterns": [ "/dist/**", "/example/**" ],
    "overrides": [
        {
            "files": ["**/*.ts"],
            "extends": [
                "eslint:recommended",
                "plugin:mocha/recommended",
                "plugin:@typescript-eslint/eslint-recommended",
                "plugin:@typescript-eslint/recommended"
            ],
            "parser":  "@typescript-eslint/parser",
            "parserOptions": {
                "project": "./tsconfig.json"
            },
            "plugins": [
                "@typescript-eslint",
                "mocha"
            ],
            "rules": {
                "mocha/no-setup-in-describe": "off"
            }
        },
        {
            "files": ["test/*.js"],
            "env": {
                "mocha": true
            }
        }
    ],
    "plugins": [
        "mocha"
    ],
    "rules": {
        "prefer-const": "error",
        "mocha/no-setup-in-describe": "off",
        "semi": [ "error", "never" ],
        "@typescript-eslint/no-unused-vars": [
            "off", { "argsIgnorePattern": "^_" }
        ],
        "eol-last": [ "error", "always" ]
    }
}
